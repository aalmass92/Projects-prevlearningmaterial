#include<stdio.h>
#include<sys/types.h>
#include<unistd.h>
#include<stdlib.h>

man()
{

  int fork_rv;

  printf("Before: my pid is %d\n", getpid());

  fork_rv = fork(); /*creat new process */

  if ( fork_rv == -1) /* check for error */
    {perror("fork");}

  if ( fork_rv == 0)
    {
      printf("My PID is %d\n", getpid());
	}
  printf("I am waiting for my child %d\n", getpid());

}
